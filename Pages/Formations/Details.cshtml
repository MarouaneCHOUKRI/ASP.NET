@page
@model Universite.Pages.Formations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Formation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Formation.Intitule)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formation.Intitule)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Formation.AnneeDiplome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formation.AnneeDiplome)
        </dd>
    </dl>
</div>
<h2>Les UES de la formation</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Numéro d'Ue
            </th>
            <th>
                Intitulé
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Formation.UeListe)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Intitule)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Les étudiants de la formation</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Numéro étudiant
            </th>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Formation.EtudiantsInscrits)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroEtudiant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Formation?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
